{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "lib": ["DOM", "ES6"],
    "outDir": "./webview-dist",
    "rootDir": "./src/webview",
    "strict": true,
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/webview/**/*.tsx", "src/webview/**/*.ts"],
  "exclude": ["node_modules"]
}
